<div class="tweet-wrapper" style="background-image:url('<%= @tweet.background_url %>')">
	<div class="tweet">
		<h2>
		  <%= image_tag @tweet.photo_url %>
		  <%= @tweet.screen_name %>
		  <%= @tweet.name %>
		</h2>

		<p>
		  <%= @tweet.content %>
		  <small><%= @tweet.tweeted_at %></small>
		</p>

		<p>
		  <%= @tweet.name %>
		</p>


		<%= link_to 'Edit', edit_tweet_path(@tweet) %> |
		<%= link_to 'Back', tweets_path %>
	</div>
</div>